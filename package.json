{
  "name": "globeinfo",
  "version": "0.0.1",
  "description": "Country information explorer built with Next.js, Apollo GraphQL and Emotion",
  "license": "ISC",
  "author": "",
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --webpack",
    "build:analyze": "cross-env ANALYZE=true next build --webpack",
    "start": "next start",
    "lint": "next lint --fix",
    "format": "prettier --write .",
    "prepare": "husky install",
    "lint:styles": "stylelint '**/*.{ts,tsx}'",
    "lint:styles:fix": "stylelint '**/*.{ts,tsx}' --fix",
    "generate": "plop"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@fortawesome/fontawesome-svg-core": "^7.0.1",
    "@fortawesome/free-brands-svg-icons": "^7.0.1",
    "@fortawesome/free-regular-svg-icons": "^7.0.1",
    "@fortawesome/free-solid-svg-icons": "^7.0.1",
    "@fortawesome/react-fontawesome": "^3.0.2",
    "next": "^16.0.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "@apollo/client": "^4.0.9",
    "graphql": "^16.9.0",
    "graphql-tag": "^2.12.6",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@next/bundle-analyzer": "^16.0.1",
    "@next/eslint-plugin-next": "^15.5.2",
    "@stylelint/postcss-css-in-js": "^0.38.0",
    "@types/node": "^24.0.14",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "cross-env": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "^16.0.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "plop": "^4.0.1",
    "postcss": "^8.5.2",
    "prettier": "^3.4.2",
    "stylelint": "^16.23.1",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-order": "^7.0.0",
    "typescript": "^5",
    "typescript-eslint": "^8.37.0",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write",
      "stylelint --fix",
      "eslint --fix",
      "git add ."
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add ."
    ]
  }
}
